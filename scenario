#!/usr/bin/env python3
# -*- coding: utf-8 -*-
"""
AI场景执行工具启动脚本

这是一个便捷的启动脚本，用于运行AI场景执行命令行工具。
用户可以直接使用 ./scenario 命令来执行各种场景操作。
"""

import sys
import os
from pathlib import Path

# 获取脚本所在目录
script_dir = Path(__file__).parent.absolute()

# 添加项目路径到Python路径
project_root = script_dir
sys.path.insert(0, str(project_root))

# 设置环境变量
os.environ['PYTHONPATH'] = str(project_root)

# 导入并运行CLI工具
if __name__ == '__main__':
    try:
        from src.auto_test.cli.scenario_cli import main
        import asyncio
        
        # 运行主函数
        asyncio.run(main())
        
    except ImportError as e:
        print(f"错误：无法导入CLI模块: {e}")
        print("请确保项目依赖已正确安装")
        sys.exit(1)
    except Exception as e:
        print(f"错误：{e}")
        sys.exit(1)